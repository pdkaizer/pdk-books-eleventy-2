<!doctype html>
<html lang="en">
   {% include "head.njk" %}
  <body class="{{ bodyClass }}" >
     {% include "header.njk" %}

<div class="portfolio-area">
	<div class="portfolio">

		<h1><i class="fal fa-pencil"></i> {{ title }}</h1>

		{%- for portfolio-item in page.portfolio-items -%}
		<div class="portfolio-section clearfix">
			<section class="portfolio-image">
				<img src="/images/portfolio/{{portfolio-item.image}}" alt="" class="img-responsive" />
			</section>

			<section class="portfolio-text">
				<h2>{{portfolio-item.title}}</h2>
				{{portfolio-item.text}}

				<p><strong>Type:</strong> {{portfolio-item.filter}}</p>
				<p><strong>Skills:</strong> {{portfolio-item.skills}}</p>
				<p><strong>Role:</strong> {{portfolio-item.role}}</p>
				<p><strong>Visit site:</strong> <a href="{{portfolio-item.url}}">{{portfolio-item.url}}</a></p>
			</section>
		</div>
		{%- endfor -%}

	</div>
</div>

      {% include "footer.njk" %}
      <script>{% include "js/main.js" %}</script>
  </body>
</html>